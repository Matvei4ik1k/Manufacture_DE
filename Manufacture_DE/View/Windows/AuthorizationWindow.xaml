<Window x:Class="Manufacture_DE.View.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manufacture_DE.View.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" SizeToContent="WidthAndHeight" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:"/>
        <TextBox Grid.Row="0" Grid.Column="2" Text="" Name="LoginTb"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль:" />
        <PasswordBox Grid.Row="2" Grid.Column="2" Name="PasswordPb"/>
        <Button Grid.Row="4" Grid.Column="2" Content="Войти" Name="LoginBtn"/>
    </Grid>
</Window>
